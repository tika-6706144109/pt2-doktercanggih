<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/green_tosca</item>
        <item name="colorPrimary">@color/green_tosca</item>
        <item name="colorPrimaryDark">@color/green_tosca_2</item>
        <item name="colorControlHighlight">@color/grey_background</item>

        <item name="android:windowBackground">@color/bg_product_list</item>
        <item name="android:textColorPrimary">@color/text_black</item>

    </style>

    <style name="NavigationBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorControlHighlight">@color/grey_background</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextAppearance.Bold" parent="android:TextAppearance">
        <!--<item name="fontPath">fonts/Roboto-Bold.ttf</item>-->
    </style>

    <style name="TextAppearance.Light" parent="android:TextAppearance">
        <!--<item name="fontPath">fonts/Roboto-Light.ttf</item>-->
    </style>

    <style name="TextAppearance.Medium" parent="android:TextAppearance">
        <!--<item name="fontPath">fonts/Roboto-Medium.ttf</item>-->
    </style>

    <style name="MyButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationViewTheme" parent="NavigationBaseTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyEditTextBorder">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:textColorHint">@color/text_grey</item>
    </style>

</resources>
